<div class="registerContainer col-xs-12 col-md-6">
    <ul class="nav nav-pills nav-justified" style="margin-bottom: 20px;">
      <li class="active"><a href="#home" data-toggle="tab">LOG IN</a></li>
      <li><a href="#profile" data-toggle="tab">SIGN UP</a></li>
    </ul>

    <div id="myTabContent" class="tab-content">
      <div class="tab-pane fade active in" id="home">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {role: "form"}) do |f| %>

        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <%= f.email_field :email, autofocus: true, :class => "form-control"%>
        </div>

        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
            <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
        </div>

        <div class="checkbox">
          <label>
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me, :class => "checkbox" %>
            <a>Remember Me</a>
            <% end -%>
          </label>
          <label><br><%= link_to "Forgot your password?", new_password_path(resource_name) %></br></label>
        </div>

        <div class="actions">
            <%= f.submit "Log in", :class => "btn btn-primary"%>
        </div>
        <% end %>
    </div>

      <div class="tab-pane fade" id="profile">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

        <form role="form">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <%= f.email_field :email, autofocus: true, :class => "form-control"%>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", :class => "form-control"%>
          </div>

          <div class="form-group">
            <label for="exampleInputPassword1">Password Confirmation</label>
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", :class => "btn btn-primary" %>
          </div>
        <% end %>
      </div>
  </div>
</div>

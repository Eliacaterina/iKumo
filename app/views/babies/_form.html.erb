
<%= form_for @baby, :html => {:multipart => true, :class => "form-horizontal horizontal"} do |f| %>
  <% if @baby.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@baby.errors.count, "error") %> prohibited this baby from being saved:</h2>

      <ul>
      <% @baby.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" id="baby_form">
    <div class="col-xs-12 col-xs-offset-3">
      <%= image_tag(@baby.avatar_url) if @baby.avatar? %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>
  </div>

  <div class="form-group" id="baby_form">
    <label for="inputName" class="col-xs-3 col-xs-offset-1 control-label">Name:</label>
    <div class="col-xs-7">
    <%= f.text_field :name, :class =>"form-control"%>
    </div>
  </div>

  <div class="form-group" id="baby_form">
    <label for="inputBirthday" class="col-xs-3 col-xs-offset-1 control-label">Birthday:</label>
    <div class="col-xs-7">
    <%= f.text_field :birthday, :class =>"datepicker form-control", :placeholder => "Select Date"%>
    </div>
  </div>

  <div class="form-group" id="baby_form">
    <label for="inputLength" class="col-xs-3 col-xs-offset-1 control-label">Length (cm):</label>
    <div class="col-xs-7">
    <%= f.number_field :length, :class =>"form-control"%>
    </div>
  </div>

  <div class="form-group" id="baby_form">
    <label for="inputWeight" class="col-xs-3 col-xs-offset-1 control-label">Weight (kg):</label>
    <div class="col-xs-7">
    <%= f.number_field :weight, :class =>"form-control"%>
    </div>
  </div>

  <div class="form-group" id="baby_form">
    <label class="col-xs-3 col-xs-offset-1 control-label">It's':</label>
    <div class="col-xs-7">
      <div class="radio radio-primary" id="gender_select">
        <label>
    <%= radio_button :baby, :gender, :boy, :class => "radio radio-primary"%>Boy
        </label>
      </div>
      <div class="radio radio-primary" id="gender_select">
        <label>
    <%= radio_button :baby, :gender, :girl, :class => "radio radio-primary" %>Girl
        </label>
      </div>
      <div class="radio radio-primary" id="gender_select">
        <label>
    <%= radio_button :baby, :gender, :surprise, :class => "radio radio-primary" %>Surprise!
        </label>
      </div>
    </div>
  </div>

  <div class="form-group" id="baby_form">
    <div class="col-xs-6 col-md-4"></div>
    <div class="col-xs-6 col-md-4"><%= f.submit "HOORAY!", :class=>"btn btn-primary btn-lg"%></div>
    <div class="col-xs-6 col-md-4"></div>
  </div>
<% end %>

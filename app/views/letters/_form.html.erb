<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@letter) do |f| %>
      <% if @letter.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@letter.errors.count, "error") %> prohibited this letter from being saved:</h2>

          <ul>
          <% @letter.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>
      <div class="field">
        <%= f.label :date %><br>
        <%= f.date_select :date %>
      </div>

      <div class="field">
        <%= f.label :baby %><br>
        <%= f.collection_select :baby_id, @my_babies, :id, :name %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
